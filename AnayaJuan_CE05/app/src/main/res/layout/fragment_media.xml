<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical">
        <!--Linear Layout to Hold The Album Image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorBlackTransparent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageView_MediaPlayer_AlbumCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="8sp"
                android:paddingBottom="8sp"
                android:paddingLeft="8sp"
                android:paddingRight="8sp"
                android:paddingTop="8sp" />

        </LinearLayout>
        <!--Linear Layout to Hold Buttons Horizontally-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorBlackTransparent"
            android:orientation="vertical">
            <!--Linear Layout to Hold Information about the Song-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <!--Song Name-->
                <TextView
                    android:id="@+id/TextView_MediaPlayer_SongName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp"
                    android:layout_marginTop="16sp"
                    android:hint="@string/song"
                    android:paddingTop="16sp"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />
                <!--SeekBar for Song Update-->
                <SeekBar
                    android:id="@+id/SeekBar_MediaPlayer_Song"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="16sp" />
            </LinearLayout>
            <!--Linear Layout to Hold the Media Player Controls-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16sp"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_marginTop="16sp"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <!--Shuffle-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Shuffle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/shuffle" />
                <!--Loop-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Loop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/loop" />
                <!--Previous Song-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Previous"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/previous" />
                <!--Stop-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/stop" />
                <!--Pause-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Pause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/pause" />
                <!--Play-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Play"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/play" />
                <!--Next Song-->
                <Button
                    android:id="@+id/Button_MediaPlayer_Next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="16sp"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="16sp"
                    android:layout_weight="0.14"
                    android:background="@drawable/next" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>