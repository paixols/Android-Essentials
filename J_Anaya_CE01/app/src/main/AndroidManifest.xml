<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fullsail.paix.com.j_anaya_ce01">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Activities-->
        <activity android:name=".List.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Form.FormActivity" />
        <activity android:name=".Detail.DetailActivity">
            <intent-filter>
                <action android:name="com.fullsail.android.ACTION_VIEW_DATA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!--Receivers-->
        <receiver
            android:name=".Receivers.SaveDeleteReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.fullsail.android.ACTION_SAVE_DATA" />
                <action android:name="com.fullsail.android.ACTION_DELETE_DATA" />
            </intent-filter>
        </receiver>
    </application>

</manifest>